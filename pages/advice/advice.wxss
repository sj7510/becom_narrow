/* pages/advice/advice.wxss */

.container {
  min-height: 100vh;
  padding: 0 30rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
  background-color: #f9f9f9;
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.header {
  position: sticky;
  top: 0;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
  z-index: 10;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
}

/* 标签页样式 */
.tab-bar {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
}

.tab-item.active {
  background-color: #4b7ffb;
}

.tab-item text {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active text {
  color: #ffffff;
}

/* 加载和空状态 */
.loading-container,
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-image,
.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.loading-icon,
.empty-icon {
  margin-bottom: 20rpx;
}

.loading-icon {
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 建议列表样式 */
.advice-list {
  flex: 1;
}

.advice-cards {
  padding: 10rpx 0 30rpx;
}

.advice-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.advice-image {
  width: 100%;
  height: 300rpx;
}

.advice-content {
  padding: 24rpx;
}

.advice-type {
  display: inline-block;
  font-size: 24rpx;
  color: #4b7ffb;
  background-color: rgba(75, 127, 251, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
}

.advice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.advice-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
  display: block;
  line-height: 1.5;
}

.advice-actions {
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #f0f0f0;
  padding-top: 24rpx;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.action-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 10rpx;
}

.action-text {
  font-size: 26rpx;
  color: #999;
}

.action-item.like.active .action-icon,
.action-item.like.active .action-text {
  color: #ff5252;
}

.action-item.share .action-icon,
.action-item.share .action-text {
  color: #4b7ffb;
}

.advice-image-container {
  width: 100%;
  height: 300rpx;
  background-color: #f5f7fa;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.advice-icon {
  display: flex;
  justify-content: center;
  align-items: center;
}
