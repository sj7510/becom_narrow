/* pages/profile/profile.wxss */

.container {
  min-height: 100vh;
  padding: 0 16rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 100rpx);
  background-color: #f9f9f9;
}

/* 头部样式 */
.header {
  position: sticky;
  top: 0;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
  z-index: 10;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
}

/* 用户卡片样式 */
.user-card {
  margin: 12rpx 0 16rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar,
.avatar-icon {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.user-detail {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.user-detail-icon {
  margin-right: 8rpx;
  color: #4b7ffb;
}

.user-login {
  margin-top: 12rpx;
}

.login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #4b7ffb;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(75, 127, 251, 0.3);
}

.login-btn my-icon {
  margin-right: 12rpx;
}

/* 表单样式 */
.profile-form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-section {
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-field {
  width: 100%;
  height: 90rpx;
  background-color: #f7f7f7;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
}

.radio-group {
  display: flex;
  padding: 10rpx 0;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 28rpx;
}

.radio-label my-icon {
  margin: 0 10rpx;
}

.picker-field {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 90rpx;
  background-color: #f7f7f7;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
}

/* 健康指标卡片 */
.health-card {
  background-color: #f7f7f7;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 16rpx;
}

.health-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #ececec;
}

.health-item:last-child {
  border-bottom: none;
}

.health-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.info-icon {
  margin-left: 12rpx;
}

.health-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #4b7ffb;
}

/* 保存按钮 */
.save-btn {
  width: 100%;
  height: 90rpx;
  background-color: #4b7ffb;
  color: #ffffff;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 16rpx rgba(75, 127, 251, 0.3);
  border: none;
  margin: 30rpx 0;
}

.save-btn my-icon {
  margin-right: 16rpx;
}

/* 其他选项 */
.other-options {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.option-item {
  display: flex;
  align-items: center;
  padding: 24rpx 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.option-item:last-child {
  border-bottom: none;
}

.option-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(75, 127, 251, 0.1);
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.option-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.option-arrow {
  color: #ccc;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  z-index: 1001;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  padding: 10rpx;
}

.modal-content {
  padding: 30rpx 20rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.bmi-info {
  margin-bottom: 20rpx;
}

.bmi-info-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.bmi-range {
  font-size: 28rpx;
  color: #333;
}

.bmi-status {
  font-size: 28rpx;
  color: #4b7ffb;
  font-weight: 500;
}

.bmi-desc,
.calories-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 成功提示 */
.success-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 60rpx;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  z-index: 1002;
}

.success-icon {
  margin-bottom: 16rpx;
}

.success-text {
  color: #fff;
  font-size: 28rpx;
}
