/* pages/stats/stats.wxss */

.container {
  min-height: 100vh;
  padding: 0 30rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
  background-color: #f9f9f9;
}

/* 头部样式 */
.header {
  position: sticky;
  top: 0;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
  z-index: 10;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
}

/* 周期选择器样式 */
.period-selector {
  display: flex;
  justify-content: center;
  margin: 20rpx 0 30rpx;
  background-color: #f1f1f1;
  border-radius: 20rpx;
  padding: 6rpx;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
}

.selector-item {
  flex: 1;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
  text-align: center;
}

.selector-item.active {
  background-color: #ffffff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.selector-item text {
  font-size: 28rpx;
  color: #555;
}

.selector-item.active text {
  color: #333;
  font-weight: 500;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.loading-image,
.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-hint {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 统计卡片 */
.stats-container {
  padding-bottom: 30rpx;
}

.stats-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stats-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.stats-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.stats-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.stats-value.increase {
  color: #fa6767;
}

.stats-value.decrease {
  color: #42b883;
}

/* 图表容器 */
.chart-container {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.chart-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.chart-area {
  height: 400rpx;
  width: 100%;
}

.chart-placeholder {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.chart-bars {
  height: 80%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 20rpx 0;
  border-bottom: 1px solid #eeeeee;
}

.chart-bar-wrapper {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.chart-bar {
  width: 20rpx;
  background-color: #42b883;
  border-radius: 10rpx 10rpx 0 0;
  min-height: 10rpx;
}

.chart-label {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #999;
  transform: rotate(-45deg);
  transform-origin: center top;
  width: 50rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 日历视图 */
.calendar-container {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.calendar-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.calendar-arrow {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
}

.calendar-arrow:active {
  background-color: #f5f5f5;
}

.arrow-left,
.arrow-right {
  font-size: 28rpx;
  color: #666;
}

.weekday-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-bottom: 10rpx;
}

.weekday {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 10rpx 0;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  grid-template-rows: repeat(6, 1fr);
  gap: 6rpx;
}

.calendar-day {
  aspect-ratio: 1/1;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.current-month {
  background-color: #f9f9f9;
}

.other-month {
  background-color: #f5f5f5;
}

.has-record {
  background-color: #e7f7ef;
}

.day-number {
  font-size: 26rpx;
  color: #333;
}

.other-month .day-number {
  color: #999;
}

.day-weight {
  font-size: 20rpx;
  color: #42b883;
  margin-top: 6rpx;
}

.loading-icon,
.empty-icon {
  margin-bottom: 20rpx;
}

.loading-icon {
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
