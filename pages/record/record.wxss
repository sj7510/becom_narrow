/* pages/record/record.wxss */
.container {
  min-height: 100vh;
  padding: 0 16rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 100rpx);
  background-color: #f9f9f9;
}

.header {
  padding: 20rpx 20rpx;
  background-color: #fff;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 体重输入区域 */
.weight-input-container {
  padding: 30rpx 20rpx;
  background-color: #fff;
  margin-top: 12rpx;
}

.weight-input-box {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f7fa;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  height: 200rpx; /* 显著增加输入框高度 */
  margin: 20rpx 0;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #e2e8f0;
  position: relative;
}

.weight-input-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.weight-input {
  font-size: 80rpx; /* 调整字体大小 */
  font-weight: bold;
  color: #333;
  text-align: center;
  line-height: 1.2; /* 增加行高确保数字完全显示 */
}

.weight-unit {
  font-size: 40rpx;
  color: #666;
  margin-left: 16rpx;
  font-weight: 500;
}

/* 日期时间选择器 */
.date-time-selectors {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  background-color: #fff;
  margin-top: 12rpx;
}

.date-selector,
.time-selector {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
}

.date-selector {
  margin-right: 20rpx;
}

.date-text,
.time-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

/* 其他指标输入区域 */
.metrics-container {
  padding: 20rpx 20rpx;
  background-color: #fff;
  margin-top: 12rpx;
}

.metrics-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.metrics-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.metrics-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.metrics-input-group {
  display: flex;
  flex-wrap: wrap;
}

.metric-item {
  width: 100%;
  margin-bottom: 20rpx;
}

.metric-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.metric-input-box {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e2e8f0;
}

.metric-input {
  flex: 1;
  font-size: 32rpx;
  height: 100%;
}

/* 备注输入区域 */
.note-container {
  padding: 20rpx 20rpx;
  background-color: #fff;
  margin-top: 12rpx;
}

.note-header {
  margin-bottom: 16rpx;
}

.note-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.note-input-box {
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 80rpx;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e2e8f0;
}

.note-input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

/* 最近记录区域 */
.recent-records-container {
  padding: 20rpx 20rpx 40rpx;
  background-color: #fff;
  margin-top: 12rpx;
  margin-bottom: 120rpx;
}

.recent-records-header {
  margin-bottom: 20rpx;
}

.recent-records-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.records-list {
  max-height: 300rpx;
  overflow-y: auto;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-date-time {
  display: flex;
  align-items: center;
}

.record-date,
.record-time {
  font-size: 26rpx;
  color: #666;
  margin: 0 10rpx;
}

.record-metrics {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.record-weight {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.record-body-fat {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 保存按钮 */
.save-btn-container {
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 100rpx);
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  z-index: 10;
}

.save-btn {
  width: 100%;
  height: 90rpx;
  background-color: #4b7ffb;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  box-shadow: 0 6rpx 16rpx rgba(75, 127, 251, 0.3);
}

.save-btn my-icon {
  margin-right: 16rpx;
}

/* 键盘样式 */
.keyboard-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
}

.keyboard-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #f5f7fa;
  z-index: 999;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.keyboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.keyboard-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.keyboard-close {
  padding: 10rpx;
}

.keyboard-rows {
  display: flex;
  flex-direction: column;
}

.keyboard-row {
  display: flex;
  height: 100rpx;
}

.keyboard-key {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  background-color: #fff;
  margin: 5rpx;
  border-radius: 10rpx;
}

.keyboard-key:active {
  background-color: #edf2fd;
}

.delete-key {
  background-color: #fef2f2;
}

.keyboard-done-row {
  padding: 10rpx;
}

.keyboard-done {
  height: 90rpx;
  background-color: #4b7ffb;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.keyboard-done my-icon {
  margin-right: 10rpx;
}
